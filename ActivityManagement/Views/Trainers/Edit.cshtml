@model ActivityManagement.Models.UserInfo
@{
    ViewBag.Title = "Edit";
}


<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Trainers", FormMethod.Post))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.UserId)
    <div class="form-group">
        @Html.LabelFor(m => m.FullName)
        @Html.EditorFor(m => m.FullName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Age)
        @Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "form-control", } })
        @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TOEICScore)
        @Html.EditorFor(m => m.TOEICScore, new { htmlAttributes = new { @class = "form-control", } })
        @Html.ValidationMessageFor(m => m.TOEICScore, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProgrammingLanguage)
        @Html.EditorFor(m => m.ProgrammingLanguage, new { htmlAttributes = new { @class = "form-control", } })
        @Html.ValidationMessageFor(m => m.ProgrammingLanguage, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
}
