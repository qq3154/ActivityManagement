@model ActivityManagement.Models.Course

@{
    ViewBag.Title = "Details";
}

<h2>Details of TodoesController</h2>

<div class="form-group">
    @Html.ActionLink(
        "Back to Index page",
        "Index",
        "Courses",
        null,
        new { @class = "btn btn-primary" })
</div>

<div class="panel panel-info">
    <div class="panel-heading">Name: @Model.Name </div>
    <div class="panel-body">
        <p>Category: @Model.Category.Name</p>
        <p>Start Date: @Model.StartDate.ToString("dd/MMM/yyyy")</p>
        <p>Description: @Model.Description</p>
    </div>
</div>