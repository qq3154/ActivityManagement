@model ActivityManagement.ViewModels.CoursesUsersViewModel
@{
    ViewBag.Title = "AddMembers";
}

<h2>Add Members</h2>


@using (Html.BeginForm("AddMembers", "Courses", FormMethod.Post))
{
    <div class="form-group">
        Username:
        @Html.HiddenFor(m => m.CourseId)
        @Html.DropDownListFor(m => m.UserId,
            new SelectList(Model.Users, "Id", "Username"),
            new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Add Member</button>
    </div>
}